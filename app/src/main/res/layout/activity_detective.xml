<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oboi_detective"
    android:orientation="vertical"
    tools:context=".Active.Detective.DetectiveActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView_home_detective"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="@drawable/bg_white_rounded"
        app:iconifiedByDefault="false"
        app:queryHint="Найти статью..."

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_home_detective"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchView_home_detective"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_detective"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="26dp"
        android:src="@drawable/ic_twotone_create_24" />
</RelativeLayout>